{
  "name": "remark-github",
  "version": "7.0.0",
  "description": "Auto-link references like in GitHub issues, PRs, and comments",
  "license": "MIT",
  "keywords": [
    "writing",
    "on",
    "github",
    "sha",
    "user",
    "issue",
    "mention",
    "pull",
    "request",
    "reference",
    "remark"
  ],
  "repository": "https://github.com/wooorm/remark-github",
  "bugs": "https://github.com/wooorm/remark-github/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {
    "has": "^1.0.1",
    "is-alphabetical": "^1.0.0",
    "is-decimal": "^1.0.0",
    "is-hexadecimal": "^1.0.0",
    "mdast-util-to-string": "^1.0.1",
    "unist-util-visit": "^1.0.0"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^10.0.0",
    "remark": "^7.0.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^2.0.0",
    "tape": "^4.4.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark *.md --quiet --frail",
    "build-bundle": "browserify index.js -s remarkGitHub > remark-github.js",
    "build-mangle": "esmangle remark-github.js > remark-github.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "ignores": [
      "remark-github.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
